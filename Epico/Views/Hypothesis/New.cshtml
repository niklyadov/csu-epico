@using Epico.Entity;
@model Epico.Models.ProductEntity.Hypothesis.NewHypothesisViewModel
@{
    ViewBag.Title = "New hypothesis";
}

<!--has-text-centered-->
<div class="content is-medium ">
    <h2>New hypothesis</h2>
</div>
<div class="box">
    <form method="post" asp-controller="Hypothesis" asp-action="New">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="field">
            <label class="label" asp-for="Name">Title</label>
            <div class="control">
                <input class="form-control input" asp-for="Name" />
                <span asp-validation-for="Name" class="error-message"></span>
            </div>
        </div>

        <div class="field">
            <label class="label" asp-for="Description">Description</label>
            <div class="control">
                <input class="input" asp-for="Description" />
                <span asp-validation-for="Description" class="error-message"></span>
            </div>
        </div>

        <div class="field">
            <label class="label" asp-for="UserIds">Select team</label>
            <div class="control">
                @foreach (var user in Model.PosibleUsers)
                {
                    <label class="checkbox">
                        <input type="checkbox" value="@user.Id" name="UserIds" />
                        @user.UserName [@user.Position]
                    </label>
                    <br />
                }
            </div>
            <span asp-validation-for="UserIds" class="error-message"></span>
        </div>


        <div class="field">
            <label class="label" asp-for="MetricId">Select metric</label>
            <div class="control">
                <label class="radio">
                    <input type="radio" value="0" name="MetricId" checked />
                    None
                </label>
                <br />
                @foreach (var metric in Model.PosibleMetrics)
                {
                    <label class="radio">
                        <input type="radio" value="@metric.ID" name="MetricId" />
                        @metric.Name
                    </label>
                    <br />
                }
            </div>
            <span asp-validation-for="MetricId" class="error-message"></span>
        </div>

        <input type="hidden" value="@RoadmapType.Now" checked name="Roadmap" />
        <span asp-validation-for="MetricId" class="error-message"></span>
        <div class="has-text-centered">
            <button class="button is-primary">Create</button>
        </div>
    </form>
</div>