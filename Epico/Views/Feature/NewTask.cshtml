@model NewTaskByIdViewModel
@{
    ViewBag.Title = "Add task for feature";
}

<div class="content is-medium">
    <h2>Add task for feature</h2>
</div>
<div class="box">
    <form method="post" asp-controller="Feature" asp-action="NewTask">
        <input type="hidden" asp-for="@Model.ProductEntityId" />
        <div class="field">
            <label class="label" asp-for="Name">Task title</label>
            <div class="control">
                <input class="input" asp-for="Name" />
                <span asp-validation-for="Name" class="error-message"></span>
            </div>
        </div>
        <div class="field">
            <label class="label" asp-for="Description">Task description</label>
            <div class="control">
                <input class="input" asp-for="Description" />
                <span asp-validation-for="Description" class="error-message"></span>
            </div>
        </div>
        <br />
        <div class="field">
            <label class="label" asp-for="UserId">Responsible:</label>
            <div class="control">
                @foreach (var user in Model.PossibleUsers)
                {
                    <label class="radio">
                        <input type="radio" value="@user.Id" name="UserId" />
                        @user.UserName [@user.Position]
                    </label>
                    <br />
                }
                <span asp-validation-for="UserId" class="error-message"></span>
            </div>
        </div>

        <div class="has-text-centered">
            <button class="button is-primary">Create</button>
        </div>
    </form>
</div>