@model NewFeatureViewModel
@{
    ViewBag.Title = "Добавление фичи";
}

<form method="post" asp-controller="Feature" asp-action="New">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name">Название фичи</label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Description">Описание</label><br />
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="Hypothesis">Гипотеза</label><br />
        <input asp-for="Hypothesis" />
        <span asp-validation-for="Hypothesis"></span>
    </div>
    <div>
        <label asp-for="Team">Тип команды</label><br />
        <select>
            @foreach (var team in Model.PosibleTeams)
            {
                <option value="@team.ID">@team.Name [@team.Position.ToString()]</option>
            }
        </select>
        <span asp-validation-for="Team"></span>
    </div>
    <div>
        <label asp-for="Metric">Миссия</label><br />
        <select>
            @foreach (var metric in Model.PosibleMetrics)
            {
                <option value="@metric.ID">@metric.Name</option>
            }
        </select>
        <span asp-validation-for="Metric"></span>
    </div>
    <div>
        <input type="submit" value="Создать" />
    </div>
</form>