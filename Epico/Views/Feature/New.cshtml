@model NewFeatureViewModel
@{
    ViewBag.Title = "Добавление фичи";
}

<form method="post" asp-controller="Feature" asp-action="New">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name">Название фичи</label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Description">Описание</label><br />
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="Hypothesis">Гипотеза</label><br />
        <input asp-for="Hypothesis" />
        <span asp-validation-for="Hypothesis"></span>
    </div>
    <div>
        <label asp-for="TaskId">Выбор задачи</label><br />
        <select asp-for="TaskId">
            @foreach (var task in Model.PosibleTasks)
            {
                <option value="@task.ID">@task.Name</option>
            }
        </select>
        <span asp-validation-for="TaskId"></span>
    </div>
    <div>
        <label asp-for="MetricId">Выбор метрик</label><br />
        <select asp-for="MetricId">
            @foreach (var metric in Model.PosibleMetrics)
            {
                <option value="@metric.ID">@metric.Name</option>
            }
        </select>
        <span asp-validation-for="MetricId"></span>
    </div>
    <div>
        <input type="submit" value="Создать" />
    </div>
</form>