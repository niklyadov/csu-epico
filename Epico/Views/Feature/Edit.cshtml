@using Epico.Entity
@model EditFeatureViewModel
@{
    ViewBag.Title = "Изменение фичи";
}
<div class="content is-medium">
    <h2>Изменение фичи</h2>
</div>
<div class="box">
    <form method="post" asp-action="Edit" asp-controller="Feature">
        <input type="hidden" asp-for="FeatureId" />
        <div asp-validation-summary="ModelOnly"></div>

        <!--Название [input]-->
        <div class="field">
            <label class="label" asp-for="Name">Название</label>
            <div class="control">
                <input class="input" asp-for="Name" value="@Model.Name" />
                <span asp-validation-for="Name" class="error-message"></span>
            </div>
        </div>

        <!--Описание [input]-->
        <div class="field">
            <label class="label" asp-for="Description">Описание</label>
            <div class="control">
                <input class="input" asp-for="Description" value="@Model.Description" />
                <span asp-validation-for="Description" class="error-message"></span>
            </div>
        </div>

        <!--Гипотеза [input]-->
        <div class="field">
            <label class="label" asp-for="Hypothesis">Гипотеза</label>
            <div class="control">
                <input class="input" asp-for="Hypothesis" value="@Model.Hypothesis" />
                <span asp-validation-for="Hypothesis" class="error-message"></span>
            </div>
        </div>

        <!--Выбор задач [checkbox]-->
        <div class="field">
            <label class="label" asp-for="Tasks">Выбор задач</label>
            <div class="control">
                @foreach (var task in Model.PosibleTasks)
                {
                    <label class="checkbox">
                        <input type="checkbox" value="@task.ID" name="Tasks" checked=@Model.Tasks.Contains(task.ID) />
                        @task.Name
                    </label>
                    <br />
                }
            </div>
            <span asp-validation-for="Tasks" class="error-message"></span>
        </div>

        <!--Выбор метрик [checkbox]-->
        <div class="field">
            <label class="label" asp-for="MetricId">Выбор метрик</label>
            <div class="control">
                @foreach (var metric in Model.PosibleMetrics)
                {
                    <label class="radio">
                        <input type="radio" value="@metric.ID" name="MetricId" checked=@Model.MetricId.Equals(metric.ID) />
                        @metric.Name
                    </label>
                    <br />
                }
            </div>
            <span asp-validation-for="MetricId" class="error-message"></span>
        </div>

        <!--Выбор статуса [radio]-->
        <div class="field">
            <label class="label" asp-for="State">Статус</label>
            <div class="control">
                <label class="radio">
                    <input type="radio" value="@FeatureState.NotStarted" checked=@Model.State.Equals(FeatureState.NotStarted) name="State" />
                    NotStarted
                </label>
                <label class="radio">
                    <input type="radio" value="@FeatureState.InProgress" checked=@Model.State.Equals(FeatureState.InProgress)  name="State" />
                    InProgress
                </label>
                <label class="radio">
                    <input type="radio" value="@FeatureState.Closed" checked=@Model.State.Equals(FeatureState.Closed)  name="State" />
                    Closed
                </label>
                <br />
            </div>
            <span asp-validation-for="State" class="error-message"></span>
        </div>

        <!--Выбор роадмапа [radio]-->
        <div class="field">
            <label class="label" asp-for="State">Роадмап</label>
            <div class="control">
                <label class="radio">
                    <input type="radio" value="@RoadmapType.Now" @Html.Raw(Model.Roadmap == RoadmapType.Now ? "checked" : "") name="Roadmap" />
                    Now
                </label>
                <label class="radio">
                    <input type="radio" value="@RoadmapType.Then" @Html.Raw(Model.Roadmap == RoadmapType.Then ? "checked" : "") name="Roadmap" />
                    Then
                </label>
                <label class="radio">
                    <input type="radio" value="@RoadmapType.After" @Html.Raw(Model.Roadmap == RoadmapType.After ? "checked" : "") name="Roadmap" />
                    After
                </label>
                <br />
            </div>
            <span asp-validation-for="State" class="error-message"></span>
        </div>

        <div class="has-text-centered">
            <button class="button is-primary">Сохранить</button>
        </div>
    </form>
</div>