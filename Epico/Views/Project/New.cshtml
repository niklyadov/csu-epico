@model NewProjectViewModel

@{
    ViewBag.Title = "Добавление проекта";
}

<form method="post" asp-controller="Project" asp-action="New">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name">Название</label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Vision">Виденье</label><br />
        <input asp-for="Vision" />
        <span asp-validation-for="Vision"></span>
    </div>
    <div>
        <label asp-for="Mission">Миссия</label><br />
        <input asp-for="Mission" />
        <span asp-validation-for="Mission"></span>
    </div>
    <div>
        <label asp-for="ProductFormula">Продуктовая формула</label><br />
        <input asp-for="ProductFormula" />
        <span asp-validation-for="ProductFormula"></span>
    </div>
    <div>
        <input type="submit" value="Создать" />
    </div>
</form>