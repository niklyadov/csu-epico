@model Epico.Entity.Project

@{
    ViewBag.Title = "Просмотр проектов";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col" class="blockquote">ID</th>
            <th scope="col" class="blockquote">Название</th>
        </tr>
    </thead>
    <tr>
        <td>@Model.ID</td>
        <td><a asp-action="View" asp-route-id="@Model.ID">@Model.Name</a></td>
    </tr>
</table>

<div>
    <button onclick="window.location.href='/Project/New'">Создать новый проект</button>
</div>