                    @*<form method="get" onclick="this.submit()" asp-action="AddFeature" asp-controller="Sprint">
                        <div class="is-flex center-element">
                            <input type="hidden" asp-for="SprintId" value="@sprint.ID" />
                            <img class="plus-button" src="~/img/plus.svg" />
                        </div>
                    </form>*@


                </div>
                <div class="column">
                    <a class="button is-red is-fullwidth" style="margin-bottom: 0.5%"
                       asp-controller="Sprint"
                       asp-action="Edit"
                       asp-route-id="@sprint.ID">Change Sprint</a>
                    <a class="button is-red is-fullwidth" style="margin-bottom: 0.5%"
                       asp-controller="Sprint"
                       asp-action="Delete"
                       asp-route-id="@sprint.ID">Delete Sprint</a>
                    @*<form method="get">
                        <input type="hidden" asp-for="SprintId" value="" />
                        <button class="button is-primary is-small" style="margin-bottom: 0.5%"></button>
                    </form>
                    <form method="get" asp-action="Delete" asp-controller="Sprint">
                        <input type="hidden" asp-for="SprintId" value="@sprint.ID" />
                        <button class="button is-primary is-small" style="margin-bottom: 0.5%">Delete Sprint</button>
                    </form>*@
                </div>
            </div>
        </div>
    }
    <!-- Кнопка добавления нового спринта-->
    <form method="get" onclick="this.submit()" asp-action="New" asp-controller="Sprint">
        <div class="is-flex center-element">
            <img class="plus-button" src="~/img/plus-square.svg" />
        </div>
