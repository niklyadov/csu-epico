@model SprintViewModel
@{
    ViewBag.Title = "Sprints";
}

<div class="column box gray-container">
    <h2 class="bold">Список всех спринтов</h2>
    <br />

    @if (Model.SprintError)
    {
        <span class="error-message">*Нельзя создать спринт без указания фичи</span>
        <br />
    }
    <!--Раскоментить когда релизную версию выкатывать будем-->
    @foreach (var sprint in Model.Sprints)
    {
        <div class="box word-break">
            <div class="columns">
                <div class="column is-four-fifths">
                    <p><span class="bold">Название:</span> @sprint.Name</p>
                    <p><span class="bold">Сроки:</span> (@sprint.StartDate --- @sprint.EndDate)</p>

                    <div class="container-text-button">
                        <span class="bold">Список фич и гипотез: </span>
                        <div class="container-text-button_button ">
                            <a class="is-24-height" asp-controller="Sprint" asp-action="AddFeature" asp-route-id="@sprint.ID">
                                <img class="plus-button" src="~/img/plus.svg" />
                            </a>
                        </div>
                    </div>

                    <table>
                        <tbody>
                            <tr>
                                <th style="min-width:80px"></th>
                                <th></th>
                                <th style="min-width:25px"></th>
                                <th style="min-width:25px"></th>
                            </tr>
                            @foreach (var feature in sprint.Features.OrderBy(x => x.IsFeature))
                            {
                                <tr>
                                    @if (feature.IsFeature)
                                    {
                                        <td>Фича:</td>
                                        <td>@feature.Name [@feature.State]</td>
                                    }
                                    else
                                    {
                                        <td>Гипотеза:</td>
                                        <td>@feature.Name</td>
                                    }
                                    <td>
                                        <a class="is-24-height" asp-controller="Feature" asp-action="Edit" asp-route-id="@feature.ID">
                                            <img class="edit-button" src="~/img/edit.svg" />
                                        </a>
                                    </td>
                                    <td>
                                        <a class="is-24-height" asp-controller="Sprint" asp-action="DeleteFeature" asp-route-sprintId="@sprint.ID" asp-route-featureId="@feature.ID">
                                            <img class="delete-button" src="~/img/trash.svg" />
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                        
                    
