@model SprintViewModel
@{
    ViewBag.Title = "Sprints";
}

<div class="column box" style="background: #ededed; margin: 10px;">
    @foreach (var sprint in Model.Sprints)
    {
        <span><strong>@sprint.Name</strong></span>
        <div class="box">
        @foreach (var feature in sprint.Features)
        {
            <p>@feature.Name</p>
        }
            <!--тут скорее всего заменить на форму придётся чтоб на страницу с добавлением фич
                отправлять id спринта (из существующих фич исключать занятые этим спринтом)-->
            <div class="has-text-centered">
                <input type="image" src="~/img/plus.svg" />
            </div>
        </div>
    }


    <!--Тестовые спринты-->
    <span><strong>Test sprint 1</strong></span>
    <div class="box">
        <p>Feature 1</p>
        <p>Feature 2</p>
        <p>Feature 3</p>
        <p>Feature 4</p>
        <div class="has-text-centered">
            <input type="image" src="~/img/plus.svg" />
        </div>
    </div>
    <span><strong>Test sprint 2</strong></span>
    <div class="box">
        <p>Feature 5</p>
        <p>Feature 6</p>
        <p>Feature 7</p>
        <p>Feature 8</p>
        <div class="has-text-centered">
            <input type="image" src="~/img/plus.svg" />
        </div>
    </div>
    <span><strong>Test sprint 3</strong></span>
    <div class="box">
        <p>Feature 9</p>
        <p>Feature 10</p>
        <p>Feature 11</p>
        <p>Feature 12</p>
        <div class="has-text-centered">
            <input type="image" src="~/img/plus.svg" />
        </div>
    </div>


    <!-- Кнопка добавления нового спринта-->
    <div class="is-flex" style="justify-content: center;">
        <a class="image is-24x24" asp-action="New" asp-controller="Sprint">
            <img src="~/img/plus.svg" />
        </a>
    </div>
</div>