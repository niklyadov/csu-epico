@model EditSprintViewModel

@{
    ViewBag.Title = "Изменение спринта";
}

<div class="content is-medium">
    <h2>Изменение спринта</h2>
</div>
<div class="box">
    <form method="post" asp-action="Edit" asp-controller="Sprint">
        <input type="hidden" asp-for="ProductId" />
        <div asp-validation-summary="ModelOnly"></div>
        <div class="field">
            <label class="label" asp-for="Name">Название Спринта</label>
            <div class="control">
                <input class="input" asp-for="Name" value="@Model.Name" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="field">
            <label class="label" asp-for="Features">Фичи для спринта</label>
            @foreach (var feature in Model.PosibleFeatures)
            {
                <label class="checkbox">
                    <input type="checkbox" value="@feature.ID" name="Features" @Html.Raw(Model.Features.Contains(feature.ID) ? "checked" : "") />
                    @feature.Name
                </label>
                <br />
            }
            <span asp-validation-for="Features"></span>
        </div>
        <div class="has-text-centered">
            <button class="button is-primary">Сохранить</button>
        </div>
    </form>
</div>