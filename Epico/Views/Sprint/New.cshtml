@model NewSprintViewModel

@{
    ViewBag.Title = "Добавление спринта";
}

<form method="post" asp-controller="Sprint" asp-action="New">
    <input type="hidden" asp-for="ProjectId" />
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name">Название Спринта</label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Features">Фичи для спринта</label><br />
        @foreach (var feature in Model.PosibleFeatures)
        {
            <input type="checkbox" value="@feature.ID" name="Features" />@feature.Name <br />
        }
        <span asp-validation-for="Features"></span>
    </div>
    <div>
        <input type="submit" value="Создать" />
    </div>
</form>
