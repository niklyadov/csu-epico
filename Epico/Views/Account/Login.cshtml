@model Epico.Views.LoginViewModel

@{
    ViewData["Title"] = "Вход в систему";
}

<h2 class="display-4">Вход в систему</h2>
<br />
<br />
<form method="post" asp-controller="Account" asp-action="Login">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label lead" asp-for="Username"></label><br />
        <div class="col-sm-10">
            <input class="form-control" asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label lead" asp-for="Password"></label><br />
        <div class="col-sm-10">
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <br />
    <div>
        <input class="btn btn-primary" type="submit" value="Войти" />
    </div>
</form>
<br />
<a asp-action="Registration">Регистрация</a>