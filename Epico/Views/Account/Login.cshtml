@model Epico.Views.LoginViewModel

@{
    ViewBag.Title = "Login";
}
<div class="content is-medium has-text-centered">
    <h2>Login</h2>
</div>
<div class="box logun-registretion-window">
    <form asp-controller="Account" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="field">
            <label class="label" asp-for="Username">Username</label>
            <div class="control">
                <!--Username-->
                <input class="input" asp-for="Username" type="text" placeholder="Username">
                <span asp-validation-for="Username" class="error-message"></span>
            </div>
        </div>

        <div class="field">
            <label class="label" asp-for="Password">Password</label>
            <div class="control">
                <!--Password-->
                <input class="input" asp-for="Password" type="password" placeholder="********">
                <span asp-validation-for="Password" class="error-message"></span>
            </div>
        </div>
        <div class="has-text-centered">
            <button class="button is-primary">Login</button>
        </div>

    </form>
    <br />
    <div class="has-text-centered">
        <a asp-action="Registration">Signup</a>
    </div>
</div>
