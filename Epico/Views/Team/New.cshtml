@model NewTeamViewModel
@{
    ViewBag.Title = "Добавление команды";
}

<form method="post" asp-controller="Team" asp-action="New">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name">Название команды</label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Position">Тип команды</label><br />
        <select>
            @foreach(var position in Model.PosiblePositions)
            {
            <option value="@((int)position)">@((int)position)</option>
            }
        </select>
        <span asp-validation-for="Position"></span>
    </div>
    <div>
        <label asp-for="Users">Миссия</label><br />
        <select>
            @foreach (var user in Model.PosibleUsers)
            {
                <option value="@user.Id">@user.UserName</option>
            }
        </select>
        <span asp-validation-for="Users"></span>
    </div>
    <div>
        <input type="submit" value="Создать" />
    </div>
</form>