@model TeamViewModel
@{
    ViewBag.Title = "Users";
}

<div class="column box gray-container">
    <h2 class="bold">Список всех юзеров</h2>
    <br />
    <!--Раскоментить когда релизную версию выкатывать будем-->
    <table>
        <tbody>
            <tr>
                <th>UserName</th>
                <th width="10px"></th>
                <th>Position</th>
                <th width="10px"></th>
                <th></th>
            </tr>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td></td>
                <td>[@user.Position]</td>
                <td></td>
                <td>
                    <form method="get" onclick="this.submit()" asp-action="Delete" asp-controller="User">
                        <div class="is-flex center-element">
                            <input type="hidden" value="@user.Id" name="userId" />
                            <img class="delete-button" src="~/img/trash.svg" />
                        </div>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <form method="get" onclick="this.submit()" asp-action="Registration" asp-controller="Account">
        <div class="is-flex center-element">
            <img class="plus-button" src="~/img/plus.svg" />
        </div>
    </form>
</div>