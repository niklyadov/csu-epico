@model NewProductViewModel

@{
    ViewBag.Title = "Edit product";
}

<div class="content is-medium">
    <h2>Edit product</h2>
</div>
<div>
    <form method="post" asp-controller="Product" asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="field">
            <label class="label" asp-for="Name">Title</label>
            <div class="control">
                <input class="input" asp-for="Name" value="@Model.Name" />
                <span asp-validation-for="Name" class="error-message"></span>
            </div>
        </div>

        <div class="field">
            <label class="label" asp-for="Vision">Vision</label>
            <div class="control">
                <input class="input" asp-for="Vision" value="@Model.Vision" />
                <span asp-validation-for="Vision" class="error-message"></span>
            </div>
        </div>

        <div class="field">
            <label class="label" asp-for="Mission">Mission</label>
            <div class="control">
                <input class="input" asp-for="Mission" value="@Model.Mission" />
                <span asp-validation-for="Mission" class="error-message"></span>
            </div>
        </div>

        <div class="field">
            <label class="label" asp-for="ProductFormula">Product formula</label>
            <div class="control">
                <input class="input" asp-for="ProductFormula" value="@Model.Vision" />
                <span asp-validation-for="ProductFormula" class="error-message"></span>
            </div>
        </div>
        <br />

        <div class="has-text-centered">
            <button class="button is-primary">Save</button>
        </div>
    </form>
</div>